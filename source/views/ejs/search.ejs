<div id="preJoinView">
  <div class="container menupanel">
    <header class="d-flex justify-content-between align-items-center mb-3">
    </header>

    <main class="search-panel">

      <fieldset class="mb-4">
        <legend class="section-title">検索対象</legend>
        <div class="choice-group" id="id-type-choice">
          <div class="choice-option" data-value="user_id">UserID</div>
          <div class="choice-option" data-value="conference_id">CallID</div>
          <div class="choice-option" data-value="post_id">PostID</div>
        </div>
        <input type="hidden" name="id_type" id="idTypeHidden" value="user_id" />
      </fieldset>
      
      <fieldset class="mb-4">
        <legend class="section-title">BOTタイプ</legend>
        <div class="choice-group" id="bot-type-choice">
          <div class="choice-option" data-value="音楽">MusicBOT</div>
          <div class="choice-option" data-value="ガチギレ">FuckBOT</div>
          <div class="choice-option" data-value="いじわる">kusoBOT</div>
        </div>
        <input type="hidden" name="bot_type" id="botTypeHidden" />
      </fieldset>
      

      <div class="mb-3">
        <label for="idInput" class="form-label text-cyber">IDを入力</label>
        <input type="text" class="form-control" id="idInput" placeholder="例：123456" disabled>
      </div>

      <div class="text-center mb-4">
        <button type="submit" class="btn btn-primary btn-cyber w-100" id="searchButton" disabled>
          <i class="fas fa-search"></i> 検索
        </button>
      </div>

      <div id="result" class="mt-4"></div>
    </main>
  </div>
</div>